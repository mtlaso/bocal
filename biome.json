{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/.git/**",
			"!**/*.min.js",
			"!**/.next/**",
			"!**/node_modules/**",
			"!**/*.config.*",
			"!**/*.d.*",
			"!**/*.css",
			"!drizzle/*",
			"!coverage/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"indentWidth": 2
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"includes": ["**", "!**/src/components/ui"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useExplicitType": "off",
				"useUniqueElementIds": "off"
			},
			"correctness": {
				"noUnusedVariables": {
					"options": {
						"ignoreRestSiblings": false
					},
					"level": "warn",
					"fix": "safe"
				},
				"noUnusedImports": {
					"level": "warn",
					"fix": "safe"
				},
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error"
			},
			"suspicious": {
				"noConsole": "warn",
				"noDebugger": "error",
				"noEmptyBlockStatements": "warn"
			},
			"style": {
				"noParameterAssign": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error",
				"noUnusedTemplateLiteral": "error",
				"useNumberNamespace": "error",
				"noInferrableTypes": "error",
				"noUselessElse": "error",
				"useConsistentArrayType": "error"
			},
			"performance": {
				"noDelete": "warn",
				"noAccumulatingSpread": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"useSimplifiedLogicExpression": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
